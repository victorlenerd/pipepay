{
    "presets": ["react-app", "flow"],
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties",
      ["module-resolver", {
        "cwd": "babelrc",
        "root": ["./"],
        "alias": {
          "containers": "./src/containers",
          "pages": "./src/pages",
          "actions": "./src/actions",
          "ducks": "./src/ducks",
          "utils": "./src/utils",
          "components": "./src/components",
          "styles": "./src/styles",
          "contexts": "./src/contexts"
        },
        "extensions": [".js", ".json"]
      }]
    ]
  }
  